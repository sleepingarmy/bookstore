<%= form_for(@book, :url => admin_book_path(@book.id)) do |f| %> 

	<%= f.label(:title)%> 
	<%= f.text_field(:title)%> 
<br>
	<%= f.label(:author)%> 
	<%= f.text_field(:author)%> 
<br>
	<%= f.label(:genre)%> 
	<%= f.text_field(:genre)%> 
<br>
	<%= f.label(:date_published)%> 
	<%= f.date_select(:date_published)%> 

	<%= f.submit("update book") %> 
<% end %>

<br>
